<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    
    <hibernate-mapping>
    	<class name="com.wp.entities.Student" table = "student">
    		<id name="rno" column="SRNO"/>
    		<property name="name" column="NAME"/>
    		<property name="per" column="PER"/>
    	</class>
   
    	<class name="com.wp.entities.Teacher" table = "Teacher">
    		<id name="tno" column="TNO"/>
    		<property name="tname" column="TNAME"/>
    		<property name="salary" column="SALARY"/>
    	</class>
    	
    </hibernate-mapping>